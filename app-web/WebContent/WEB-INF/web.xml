<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<display-name>app-web</display-name>
	<welcome-file-list>
		<welcome-file>jsp/login/login.jsp</welcome-file>
	</welcome-file-list>
	<context-param>
		<param-name>bsframework.dateFormat</param-name>
		<param-value>dd/MM/yyyy</param-value>
	</context-param>
	<context-param>
		<param-name>bsframework.datetimeFormat</param-name>
		<param-value>dd/MM/yyyy HH:mm</param-value>
	</context-param>
	<context-param>
		<param-name>bsframework.numberFormat</param-name>
		<param-value>#,###,###,###</param-value>
	</context-param>
	<context-param>
		<param-name>bsframework.recordPerPage</param-name>
		<param-value>15</param-value>
	</context-param>

	<!-- Base de datos Framework -->
	<context-param>
		<param-name>bsframework.database.driver</param-name>
		<param-value>org.gjt.mm.mysql.Driver</param-value>
	</context-param>
	<context-param>
		<param-name>bsframework.database.server</param-name>
		<param-value>localhost</param-value>
	</context-param>
	<context-param>
		<param-name>bsframework.database.database</param-name>
		<param-value>BSframework</param-value>
	</context-param>
	<context-param>
		<param-name>bsframework.database.username</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>bsframework.database.password</param-name>
		<param-value>admin</param-value>
	</context-param>
	<!-- Base de datos Common -->
	<context-param>
		<param-name>bscommon.database.driver</param-name>
		<param-value>org.gjt.mm.mysql.Driver</param-value>
	</context-param>
	<context-param>
		<param-name>bscommon.database.server</param-name>
		<param-value>localhost</param-value>
	</context-param>
	<context-param>
		<param-name>bscommon.database.database</param-name>
		<param-value>bscommon</param-value>
	</context-param>
	<context-param>
		<param-name>bscommon.database.username</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>bscommon.database.password</param-name>
		<param-value>admin</param-value>
	</context-param>
	<!-- Base de datos Remu -->
	<context-param>
		<param-name>remu.database.driver</param-name>
		<param-value>org.gjt.mm.mysql.Driver</param-value>
	</context-param>
	<context-param>
		<param-name>remu.database.server</param-name>
		<param-value>localhost</param-value>
	</context-param>
	<context-param>
		<param-name>remu.database.database</param-name>
		<param-value>remu</param-value>
	</context-param>
	<context-param>
		<param-name>remu.database.username</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>remu.database.password</param-name>
		<param-value>admin</param-value>
	</context-param>

	<error-page>
		<exception-type>java.lang.BSException</exception-type>
		<location>/jsp/error/error.jsp</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.RuntimeException</exception-type>
		<location>/jsp/error/error.jsp</location>
	</error-page>
</web-app>